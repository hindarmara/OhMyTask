@page
@model TasksManagerWeb.Pages.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskItem.Id" />
            <input type="hidden" asp-for="TaskItem.CreatedAt" />
            <div class="form-group mb-3">
                <label asp-for="TaskItem.Description" class="control-label"></label>
                <input asp-for="TaskItem.Description" class="form-control" />
                <span asp-validation-for="TaskItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="TaskItem.IsCompleted" />
                    <label class="form-check-label" asp-for="TaskItem.IsCompleted">
                        Mark as completed
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}