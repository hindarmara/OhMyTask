@page
@model TasksManagerWeb.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">My Tasks</h1>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Task
        </a>
    </div>

    @if (Model.Tasks.Any())
    {
        <div class="row">
            @foreach (var task in Model.Tasks)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card @(task.IsCompleted ? "border-success" : "border-warning")">
                        <div class="card-body">
                            <h5 class="card-title @(task.IsCompleted ? "text-decoration-line-through text-muted" : "")">
                                @task.Description
                            </h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    Created: @task.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (task.IsCompleted)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    }
                                </div>
                                <div class="btn-group btn-group-sm" role="group">
                                    @if (!task.IsCompleted)
                                    {
                                        <form method="post" asp-page-handler="Complete" asp-route-id="@task.Id" class="d-inline">
                                            <button type="submit" class="btn btn-success" title="Mark as Complete">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <a asp-page="./Edit" asp-route-id="@task.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@task.Id" class="d-inline" 
                                          onsubmit="return confirm('Are you sure you want to delete this task?')">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">No tasks yet!</h3>
            <p class="text-muted">Get started by creating your first task.</p>
            <a asp-page="./Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Create Your First Task
            </a>
        </div>
    }
</div>

